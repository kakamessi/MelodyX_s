<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_course"
    android:background="#FF000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angelmusic.student.activity.VideoActivity">


    <FrameLayout
        android:id="@+id/fl_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

        <RelativeLayout
            android:id="@+id/rl_video"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<io.vov.vitamio.widget.VideoView-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="match_parent"-->
                <!--android:id="@+id/vv"-->
                <!--&gt;</io.vov.vitamio.widget.VideoView>-->
            <com.angelmusic.student.customview.JZVideo
                android:id="@+id/jzvideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loading"
            android:gravity="center"
            android:background="@mipmap/course_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="请看大屏幕"
                android:textColor="#6eccba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="120sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <ImageView
            android:id="@+id/rl_teacher_screen"
            android:src="@mipmap/course_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>

    </FrameLayout>



</RelativeLayout>
